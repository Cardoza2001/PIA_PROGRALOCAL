<Page
    x:Class="PIA_PrograLocal.Views.TiendaWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:PIA_PrograLocal.Models"
    xmlns:local="using:PIA_PrograLocal.Views">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Background="#2D2D30" Padding="10">
            <TextBlock Text="Tienda de Autos" Foreground="White" FontSize="22" FontWeight="Bold" VerticalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Historial de compras" Click="HistorialButton_Click" Margin="10,0,0,0"/>
                <Button Content="Cerrar sesión" Click="CerrarSesionButton_Click" Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Margin="10">
                <TextBlock Text="Selecciona una marca:" FontWeight="Bold" FontSize="16"/>
                <ComboBox x:Name="MarcaComboBox" SelectionChanged="MarcaComboBox_SelectionChanged" Margin="0,10,0,20"/>

                <ListView x:Name="ModelosListView" SelectionChanged="ModelosListView_SelectionChanged" Height="300">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:Auto">
                            <StackPanel Margin="5">
                                <TextBlock Text="{x:Bind Modelo}" FontWeight="Bold"/>
                                <TextBlock Text="{x:Bind Descripcion}" TextWrapping="WrapWholeWords"/>
                                <TextBlock Text="{x:Bind PrecioDisplay}" Foreground="#0078D7"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <StackPanel x:Name="SeleccionAñoPanel" Visibility="Collapsed" Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="Año:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="AnioComboBox" Width="100" Margin="10,0,0,0"/>
                    <Button Content="Agregar al carrito" Click="AgregarCarritoButton_Click" Margin="10,0,0,0"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="10">
                <TextBlock Text="Carrito de compras:" FontWeight="Bold" FontSize="16"/>
                <ListView x:Name="CarritoListView" Height="400">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:Auto">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <StackPanel Width="200">
                                    <TextBlock Text="{x:Bind Marca}" FontWeight="Bold"/>
                                    <TextBlock Text="{x:Bind Modelo}" />
                                    <TextBlock Text="{x:Bind PrecioDisplay}" Foreground="#0078D7"/>
                                </StackPanel>
                                <Button Content="Quitar" Click="EliminarDelCarrito_Click" Tag="{x:Bind}" Margin="10,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Button Content="Finalizar compra" Click="VerCarritoButton_Click" Margin="0,20,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
