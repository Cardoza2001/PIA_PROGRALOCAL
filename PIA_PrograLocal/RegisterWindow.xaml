<Window
    x:Class="PIA_PrograLocal.RegisterWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PIA_PrograLocal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Registro de usuario">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Background="#FF202020">
        <Image Source="Assets/StoreLogo.png"
               Stretch="UniformToFill"
               Opacity="0.15"/>

        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="300"
                    Spacing="10">

            <TextBlock Text="Crear cuenta"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <TextBlock Text="Nombre de usuario:"
                       Foreground="White"
                       FontWeight="Bold"
                       FontSize="16"/>
            <TextBox x:Name="UsernameBox"
                     Height="35"
                     PlaceholderText="Ingresa tu nombre"
                     Foreground="White"
                     Background="#44FFFFFF"
                     BorderBrush="White"/>

            <TextBlock Text="Correo electrónico:"
                       Foreground="White"
                       FontWeight="Bold"
                       FontSize="16"/>
            <TextBox x:Name="EmailBox"
                     Height="35"
                     PlaceholderText="ejemplo@correo.com"
                     Foreground="White"
                     Background="#44FFFFFF"
                     BorderBrush="White"/>

            <TextBlock Text="Contraseña:"
                       Foreground="White"
                       FontWeight="Bold"
                       FontSize="16"/>
            <PasswordBox x:Name="PasswordBox"
                         Height="35"
                         Background="#44FFFFFF"
                         BorderBrush="White"/>

            <TextBlock Text="Confirmar contraseña:"
                       Foreground="White"
                       FontWeight="Bold"
                       FontSize="16"/>
            <PasswordBox x:Name="ConfirmPasswordBox"
                         Height="35"
                         Background="#44FFFFFF"
                         BorderBrush="White"/>

            <Button x:Name="RegisterButton"
                    Content="Registrar"
                    Height="40"
                    Margin="0,20,0,0"
                    Background="#2196F3"
                    Foreground="White"
                    FontWeight="Bold"
                    CornerRadius="8"
                    BorderThickness="0"/>

            <Button x:Name="BackToLoginButton"
                    Content="← Volver al login"
                    Height="35"
                    Background="Transparent"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>
