<Page
    x:Class="PIA_PrograLocal.Views.TiendaWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:PIA_PrograLocal.Models"
    xmlns:local="using:PIA_PrograLocal.Views">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Background="#2D2D30" Padding="10">
            <TextBlock Text="Tienda de Autos" Foreground="White" FontSize="22" FontWeight="Bold" VerticalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:ConnectionId='20' Content="Historial de compras"                               Margin="10,0,0,0"/>
                <Button x:ConnectionId='21' Content="Cerrar sesión"                                  Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Margin="10">
                <TextBlock Text="Selecciona una marca:" FontWeight="Bold" FontSize="16"/>
                <ComboBox x:ConnectionId='10' x:Name="MarcaComboBox"                                                   Margin="0,10,0,20"/>

                <ListView x:ConnectionId='11' x:Name="ModelosListView"                                                     Height="300">
                    <ListView.ItemTemplate>
                        <DataTemplate                         >
                            <StackPanel x:ConnectionId='16' Margin="5">
                                <TextBlock x:ConnectionId='17'                        FontWeight="Bold"/>
                                <TextBlock x:ConnectionId='18'                             TextWrapping="WrapWholeWords"/>
                                <TextBlock x:ConnectionId='19'                               Foreground="#0078D7"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <StackPanel x:ConnectionId='12' x:Name="SeleccionAñoPanel" Visibility="Collapsed" Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="Año:" VerticalAlignment="Center"/>
                    <ComboBox x:ConnectionId='13' x:Name="AnioComboBox" Width="100" Margin="10,0,0,0"/>
                    <Button x:ConnectionId='14' Content="Agregar al carrito"                                    Margin="10,0,0,0"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="10">
                <TextBlock Text="Carrito de compras:" FontWeight="Bold" FontSize="16"/>
                <ListView x:ConnectionId='2' x:Name="CarritoListView" Height="400">
                    <ListView.ItemTemplate>
                        <DataTemplate                         >
                            <StackPanel x:ConnectionId='5' Orientation="Horizontal" VerticalAlignment="Center">
                                <StackPanel Width="200">
                                    <TextBlock x:ConnectionId='7'                       FontWeight="Bold"/>
                                    <TextBlock x:ConnectionId='8'                        />
                                    <TextBlock x:ConnectionId='9'                               Foreground="#0078D7"/>
                                </StackPanel>
                                <Button x:ConnectionId='6' Content="Quitar"                                                 Margin="10,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Button x:ConnectionId='3' Content="Finalizar compra"                                Margin="0,20,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>

