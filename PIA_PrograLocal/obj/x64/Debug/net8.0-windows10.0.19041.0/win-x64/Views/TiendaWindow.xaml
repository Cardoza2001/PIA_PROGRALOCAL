<Window
    x:Class="PIA_PrograLocal.Views.TiendaWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:PIA_PrograLocal.Models"
    Title="Tienda de Autos">

    <Grid Padding="20">
        <StackPanel Spacing="12">
            <TextBlock Text="Selecciona una marca:" FontSize="20"/>
            <ComboBox x:ConnectionId='2' x:Name="MarcaComboBox" Width="240"                                                  />

            <TextBlock Text="Selecciona un modelo:" FontSize="20" Margin="0,10,0,0"/>
            <ListView x:ConnectionId='3' x:Name="ModelosListView"                                                     Margin="0,10,0,0">
                <ListView.ItemTemplate>
                    <DataTemplate                         >
                        <StackPanel x:ConnectionId='9' Margin="0,6">
                            <TextBlock x:ConnectionId='10'                        FontWeight="Bold" FontSize="16"/>
                            <TextBlock x:ConnectionId='11'                             FontSize="14"/>
                            <TextBlock x:ConnectionId='12'                               FontSize="14"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <StackPanel x:ConnectionId='4' x:Name="SeleccionAñoPanel" Visibility="Collapsed" Margin="0,15,0,0">
                <TextBlock Text="Selecciona el año del modelo:" FontSize="20"/>
                <ComboBox x:ConnectionId='6' x:Name="AnioComboBox" Width="200" Margin="0,6,0,0"/>
                <Button x:ConnectionId='7' x:Name="AgregarCarritoButton" Content="Agregar al carrito" Width="200" Margin="0,10,0,0"                                   />
            </StackPanel>

            <Button x:ConnectionId='5' x:Name="VerCarritoButton" Content="Ver Carrito / Finalizar compra" Width="260" Margin="0,20,0,0"                               />
        </StackPanel>
    </Grid>
</Window>

